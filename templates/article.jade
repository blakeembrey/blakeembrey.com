extends layout

block prepend title
  | #{ page.title }

block header
  include author
  a.back(href='/') << back to index
  h1= page.title
  p
    | written by:
    mixin author(page.metadata.author)

block content
  header.title
    h1= page.title
  article.article!= page.html
  footer.footer= '- ' + page.metadata.author